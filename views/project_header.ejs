<link rel="stylesheet" href="/css/project_header.css">
<div>
    <nav class="navbar navbar-expand-lg bg-dark">
        <div class="container-md ">
            <a class="navbar-brand text-white home" href="/"><img
                    src="https://www.zohowebstatic.com/sites/default/files/projects/features/issue-tracking-banner.png"
                    alt="" width="40" height="40"> Issue Trucker</a>
        </div>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-success mx-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Create Issue
        </button>

        <!-- Modal -->
        <form action="/issue" method="post">
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Create a Project</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="d-flex flex-column modal-body">
                            <label for="title">Title</label>
                            <input type="text" name="title" id="title" placeholder="Title">
                            <label for="desc1">Description</label>
                            <textarea id="desc" name="descrip" rows="5" cols="33"></textarea>
                            <div class="d-flex flex-column a">
                                <h5 class="">Add Label</h5>
                                <div class="b">
                                    <input type="checkbox" id="bug" name="bug" value="bug">
                                    <label for="bug">bug</label>
                                </div>
                                <div class="ui">
                                    <input type="checkbox" id="ui" name="ui" value="UI Improvment">
                                    <label for="ui">UI Improvment</label>
                                </div>
                                <div class="doc">
                                    <input type="checkbox" id="doc" name="doc" value="Documentation">
                                    <label for="doc">Documentation</label>
                                </div>
                              <div class="dub">
                                    <input type="checkbox" id="dub" name="dub" value="Dublicate">
                                    <label for="dub">Dublicate</label>
                                </div>
                            </div>
                            <label for="auth">Author</label>
                            <input type="text" name="author" id="auth" placeholder="Enter Author Name">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                           <input type="submit" class="btn btn-primary" value="Create Issue">
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </nav>
</div>